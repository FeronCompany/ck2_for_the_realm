					hbox = {
						layoutpolicy_horizontal = expanding
						layoutpolicy_vertical = expanding
						vbox = { # 官僚度与法律
							margin = { 30 10 }
							layoutpolicy_vertical = expanding
							text_label_center = {#
								margin = { 10 10 }
								text = "FTR_BUREAUCRACY_VALUE_TEXT"
								tooltip = "ftr_bureaucracy_value_tooltip"
							}
							progressbar_standard = {
								name = "ftr_bureaucracy_bar"
