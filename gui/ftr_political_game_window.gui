								}
							}
							#text_label_center = {
							#	margin = { 10 10 }
							#	text = "FTR_POWERFUL_SUBJECTS_TEXT"
							#	tooltip = "ftr_powerfult_subjects_tooltip"
							#}
							#dynamicgridbox = {
							#	datamodel = "[GetPlayer.MakeScope.GetList('ftr_my_powerful_subject_list')]"
							#	#layoutpolicy_horizontal = expanding
							#	layoutpolicy_vertical = expanding
