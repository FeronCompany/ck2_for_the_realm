							}
							progressbar_standard = {
								name = "ftr_bureaucracy_bar"
								size = { 200 25 }
								min = 0
								max = 150
								value = "[GetPlayer.GetLiege.MakeScope.ScriptValue( 'ftr_bureaucracy_value' )]"
