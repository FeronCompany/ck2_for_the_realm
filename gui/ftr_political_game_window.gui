							}
							text_label_center = {
								margin = { 10 10 }
								text = "MY_REALM_WINDOW_REALM_POLICY_TAB"
							}
							scrollbox = {
								name = "ftr_realm_policies_scroll"
								layoutpolicy_horizontal = expanding
								layoutpolicy_vertical = expanding
								blockoverride "scrollbox_content"
								{
									ftr_realm_policies_pg_list = {
