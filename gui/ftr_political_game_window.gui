								min = 0
								max = 150
								value = "[GetPlayer.MakeScope.ScriptValue( 'ftr_bureaucracy_value' )]"
								text_single = {
									parentanchor = center
									position = { 0 -4 }
									text = "FTR_MY_BUREAUCRACY_BAR_TEXT"
